{
  // ===========================
  // ‚ú® Editor Settings
  // ===========================
  "editor.fontSize": 16,
  "editor.lineHeight": 22,
  "editor.fontFamily": "'Cascadia Code','Fira Code', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true, // cleaner than listing ss01-ss20 manually
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorWidth": 3,
  "editor.smoothScrolling": true,
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  "editor.guides.indentation": true,
  "editor.guides.bracketPairs": true,
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.formatOnType": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Auto-save behavior
  "files.autoSave": "onWindowChange",

  // ===========================
  // üåê Language Specific Formatters
  // ===========================
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[php]": { "editor.defaultFormatter": "bmewburn.vscode-intelephense-client" },

  // ===========================
  // üîÑ Import & Refactor
  // ===========================
  "javascript.updateImportsOnFileMove.enabled": "always",

  // ===========================
  // üõ†Ô∏è Git / GitLens
  // ===========================
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": true,
  "gitlens.graph.minimap.additionalTypes": [
    "localBranches",
    "stashes",
    "remoteBranches",
    "tags"
  ],

  // ===========================
  // ‚úÖ SonarLint Rules Overrides
  // ===========================
  "sonarlint.rules": {
    "javascript:S1135": { "level": "off" },
    "javascript:S6582": { "level": "off" },
    "javascript:S125": { "level": "off" },
    "javascript:S6544": { "level": "off" },
    "javascript:S6535": { "level": "off" },
    "javascript:S1533": { "level": "off" },
    "javascript:S6774": { "level": "off" },
    "javascript:S3358": { "level": "off" },
    "javascript:S4123": { "level": "off" },
    "php:S103": { "level": "off" },
    "php:S113": { "level": "off" }
  },

  // ===========================
  // ü§ñ Copilot / AI Assistance
  // ===========================
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "github.copilot.advanced": {
    "authProvider": "github"
  },
  "tabnine.experimentalAutoImports": true,
  "cursor.cpp.disabledLanguages": ["plaintext", "markdown", "scminput"],

  // ===========================
  // üì¶ Extensions Config
  // ===========================
  "sftp.downloadWhenOpenInRemoteExplorer": true,
  "auto-open-markdown-preview.variables": {
    "author": "Md Mahbub Alam",
    "date": "${currentDate}"
  },

  // ===========================
  // üé® UI / Workbench
  // ===========================
  "window.zoomLevel": 0,
  "window.titleBarStyle": "custom",
  "workbench.colorTheme": "Learn with Sumit - Peace of the eye - Dracula version",
  "explorer.compactFolders": false,
  "breadcrumbs.enabled": true,
  "workbench.editor.enablePreview": false,

  // ===========================
  // üí¨ Chat / Editing
  // ===========================
  "chat.editing.alwaysSaveWithGeneratedChanges": true,
  "workbench.iconTheme": "material-icon-theme",
  "editor.formatOnSave": true,
  "gitlens.views.commits.files.layout": "list"
}
